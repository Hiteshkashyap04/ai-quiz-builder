# Put a copy at backend/.env and fill values (do NOT commit real keys)
SECRET_KEY=change_this_to_a_random_long_string
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Use MISTRAL_API_KEY if you want the server to call Mistral/OpenAI-style API
# If you want to test offline, set USE_OFFLINE_FALLBACK=true
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_MODEL=mistral-small-latest

# Database url
DATABASE_URL=sqlite:///./quiz.db

# Force offline mock (useful while developing)
USE_OFFLINE_FALLBACK=false
